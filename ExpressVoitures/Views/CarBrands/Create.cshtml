@model ExpressVoitures.Data.CarBrand

@{
    ViewData["Title"] = "Create";
}

<h1>Créer une marque</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="CarBrands" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            Nom de la nouvelle marque :
            <div class="form-group">
                <input asp-for="CarBrandName" class="form-control" />
                <span asp-validation-for="CarBrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-validate btn-primary" />
                <div>
                    <a asp-controller="Cars" asp-action="Create">Annuler : retour à la création de voiture</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
